---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { tag } = Astro.props;
---

<html lang="en">
   <head>
      <BaseHead title={`Tagged Posts`} description={`Description`} />
      <style>
         main {
            width: calc(100% - 2em);
            max-width: 100%;
            margin: 0;
         }
         .prose {
            width: 720px;
            max-width: calc(100% - 2em);
            margin: auto;
            padding: 1em;
            color: rgb(var(--gray-dark));
         }
         .title {
            margin-bottom: 1rem;
            padding: 1rem 0;
            text-align: center;
            line-height: 1;
         }
         .title h1 {
            margin: 0 0 1rem 0;
         }
         i {
            background-color: mark;
            color: marktext;
         }
      </style>
   </head>

   <body>
      <Header />
      <main>
         <article>
            <div class="prose">
               <div class="title">
                  <h1>Posts tagged with <i>{tag}</i></h1>
                  <slot />
               </div>
            </div>
         </article>
         <Footer />
      </main>
   </body>
</html>
